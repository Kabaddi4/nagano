<div class="container">
  <div class="row">
      <h3>会員の方はこちらからログイン</h3>

      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "font-weight-bolder" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <p><%= notice %></p>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h4 class="bg-gray-200">会員登録がお済みでない方</h4>
    <%= render "devise/shared/links" %>
  </div>
</div>
