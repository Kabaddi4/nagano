<div class="container">
    <div class="row">
        <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
    </div>

<%= form_with model:@customer, local:true do |f| %>
     <div class="row my-2">
        <div class="col-lg-4">
            会員ID:<%= @customer.id %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-10">
            氏名：<%= f.text_field :last_name %><%= f.text_field :first_name %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-10">
            フリガナ:<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-4">
            郵便番号：<%= f.text_field :postal_code %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-4">
            住所：<%= f.text_field :customer_address %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-4">
            電話番号：<%= f.text_field :telephone_number %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-4">
            メールアドレス：<%= f.text_field :email %>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-lg-4">
            会員ステータス：<%= f.radio_button :status, Customer.statuses.key(0) %>
                            <%= f.label :status, Customer.statuses_i18n[:owned] %>

                            <%= f.radio_button :status, Customer.statuses.key(1) %>
                            <%= f.label :status, Customer.statuses_i18n[:withdrawal] %>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-lg-6">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
    </div>
<% end %>

</div>
