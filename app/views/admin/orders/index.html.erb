<div class="container">
<table>
  <thead>
    <tr>
      <th class="text-center">購入日時</th>
      <th class="text-center">購入者</th>
      <th class="text-center">注文個数</th>
    </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td class="px-3">
    <%= link_to admin_order_path(order.order.id) do %>
      <%= order.order.created_at %></td>
     <% end %>
      <td class="pr-3"><%= order.order.name %>
      <td class="text-center"><%= order.amount %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>