<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th></th>
      <th>価格</th>
      <th>商品説明</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @item.name %></td>
      <td><%= attachment_image_tag @item, :image, :fill, 60, 60 %></td>
      <td><%= @item.price %></td>
      <td><%= @item.introduction %></td>
      <% if admin_signed_in? %>
      <td><%= link_to '編集', edit_admin_item_path(@item.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>

