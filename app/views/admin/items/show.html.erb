<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
   <div class="col-1">
    <%= attachment_image_tag @item, :image, :fill, 180, 110 %>
    </div>

    <div class="col-6">
      商品名<%= @item.name %>

      <%= @item.price %>
      <%= @item.introduction %>
      <% if admin_signed_in? %>
      <%= link_to '編集', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>




