<div class="container">
<h2>商品新規登録</h2>

<%# undefied method ●●path　が出現する場合、:url=>~~の書き方が必要になってくる %>
<%= form_with model: @item,:url => {:action => :create}, local:true do |f| %>

<h4>画像</h4>
<%= f.attachment_field :image %>

<h4>商品名</h4>
<%= f.text_field :name, class:"px-3" %>

<h4>説明</h4>
<%= f.text_field :introduction, class:"px-3 py-5" %>

<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>

<h4>税込価格</h4>
<%= f.number_field :price %>円

<div class="row ml-6 my-3">
<%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>
</div>