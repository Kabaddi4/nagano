<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>
  <%= form_with model: @item,:url => {:action => :update}, local:true do |f| %>

   <div class="row">
    商品画像<%= f.attachment_field :image %>
    商品名<%= f.text_field :name %>
    商品説明<%= f.text_field :introduction %>
    ジャンル<%= f.collection_select :genre_id, Genre.all, :id, :name %>
    税込価格<%= f.number_field :price %>

    販売ステータス
    <%= f.radio_button :is_active, Item.active_sales.key(0) %>
    <%= f.label :is_active, Item.active_sales_i18n[:sale] %><br>

    <%= f.radio_button :is_active, Item.active_sales.key(1) %>
    <%= f.label :is_active, Item.active_sales_i18n[:stop_sale] %>
   </div>


  <%= f.submit "変更を保存", class: "btn btn-success" %>
  
  <% end %>
</div>
