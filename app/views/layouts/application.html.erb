<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device=width", initial-scale=1, maximum-scale=1>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class=shadow-sm>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "顧客一覧", admin_customers_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "商品追加", new_admin_item_path %>
            </li>
            <li class="nav-class">
              <%= link_to "ジャンル一覧/追加", admin_genres_path %>
            </li>
            <% elsif customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", customer_path(:id), class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "カートを見る", cart_items_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_customer_session_path, class: 'nav-link text-dark', method: :delete %>
            </li>
            <% else %>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
