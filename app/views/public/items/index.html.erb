<div class="container">
  <div class="row">
    <h3 class="col-md-12">商品一覧</h3>
    <% @items.each do |item| %>
    <div class="col-md-3">
      <%= attachment_image_tag item, :image, :fill, 160, 120, format: "jpeg" %>
      <%= item.name %>
      <%= item.price %>
      <%= link_to "詳細", item_path(item.id) %><%#path(id)や(:id)ではURLがおかしくなるので%>
    </div>
    <% end %>
  </div>
</div>