<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>商品説明</th>
      <th>価格</th>
    </tr>
  </thead>
<% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.introduction %></td>
      <td><%= item.price %></td>
      <td><%= link_to "詳細", item_path(item.id) %></td> <%#path(id)や(:id)ではURLがおかしくなるので%>
    </tr>
  </tbody>
<% end %>
</table>