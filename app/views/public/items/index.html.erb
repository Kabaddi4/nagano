<div class="container">
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th></th></th>
          <th>商品説明</th>
          <th>価格</th>
        </tr>
      </thead>
    <% @items.each do |item| %>
      <tbody>
        <tr>
          <td><%= item.name %></td>
          <td><%= attachment_image_tag item, :image, :fill, 50, 50 %></td>
          <td><%= item.introduction %></td>
          <td><%= item.price %></td>
          <td><%= link_to "詳細", item_path(item.id) %></td> <%#path(id)や(:id)ではURLがおかしくなるので%>
        </tr>
      </tbody>
    <% end %>
    </table>
  </div>
</div>