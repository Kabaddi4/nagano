<% if customer_signed_in? %>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
    <p class="text-center mt-3">マイページ</p>
    </div>
  </div>
  <div class="row">
      <p class="font-weight-bold mx-3">登録情報</p><%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success font-weight-bold" %>
  </div>


  <div class="row">
    <div class="col-lg-6">
      <div class="mt-4">
      <p>氏名：<%= @customer.last_name %>
      <%= @customer.first_name %></p>
      <p>カナ：<%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %></p>
      <p>登録郵便番号：<%= @customer.postal_code %></p><br>
      <p>住所：<%= @customer.customer_address %></p>
      <p>電話番号：<%= @customer.telephone_number %></p>
      <p>メールアドレス：<%= @customer.email %></p>
      </div>
    </div>
  </div>


    <div class="row">
      <div class="col-lg-6">
        <p class="font-weight-bold">配送先<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary mx-3" %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <p class="font-weight-bold">注文履歴<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></p>
      </div>
    </div>

    </div>
  </div>
</div>
<% end %>
