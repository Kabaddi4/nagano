<% if customer_signed_in? %>
<div class="container">
  <div class="row">
    <div class="col-6">
    <p class="text-center mt-3">マイページ</p>
    </div>
    <p class="font-weight-bold">登録情報</p><%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success font-weight-bold" %><br>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mt-4">
      <p class="px-3">氏名<%= @customer.last_name %>
      <%= @customer.first_name %></p>
      <p class="px-3">カナ：<%= @customer.last_name_kana %>
      <%= @customer.first_name_kana %></p>
      <p>登録郵便番号：<%= @customer.postal_code %></p><br>
      <p>住所：<%= @customer.customer_address %></p>
      <p>電話番号：<%= @customer.telephone_number %></p>
      <p>メールアドレス：<%= @customer.email %></p>
      </div>
    </div>
  </div>


    <div class="row">
      <p class="font-weight-bold">配送先<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></p>
    </div>

    <div class="row">
      <p class="font-weight-bold">注文履歴<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></p>
    </div>


    <p class="btn btn-success"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "text-light"  %></p>

    </div>
  </div>
</div>
<% end %>
