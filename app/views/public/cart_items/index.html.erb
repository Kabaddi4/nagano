<table>
    <thead>
        <th>商品</th>
        <th></th>
        <th>価格</th>
        <th>個数</th>
    </thead>

    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50 %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
        </tr>
        <% end %>
    </tbody>
</table>

