<%# new_order_path, order/new %>

<div class="container">
  <div class="row">
  <h4 class="col-md-7">注文情報入力</h4>
  </div>

  <div class="row">
    <h4 class="text-start">支払方法</h4>
  </div>
  <div class="row">
    <div class="col-md-6">
    <%= form_with model:@order, local:true do |f| %>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>

      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    </div>
  </div>

  <div class="row">
    <h4>お届け先</h4>
  </div>
  <div class="row">
    <div class="col-md-6">
    <%= f.radio_button :address, current_customer.customer_address %>
    <%= f.label :address, "ご自身の住所" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.radio_button :address, Address %>
      <%= f.label :address, "登録住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.radio_button :address, @order.address %>
      <%= f.label :address, "新しいお届け先" %><br>
      <p>郵便番号(ハイフンなし)<%= f.text_field :postage, label:"郵便番号" %></p>
      <p>住所<%= f.text_field :address %></p>
      <p>宛名<%= f.text_field :name %></p>
    </div>
  </div>
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
    </div>
  </div>
  <% end %>

</div>


