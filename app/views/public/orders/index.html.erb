<div class="container">
<table>
  <thead>
    <tr>
      <th class="text-center">注文日</th>
      <th class="text-center">配送先</th>
      <th class="text-center">支払金額</th>
      <th class="text-center">注文ステータス</th>
      <th class="text-center"></th>
    </tr>
  </thead>




  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td class="px-3"><%= order.created_at %></td>
      <td class="pr-3"><%= order.postal_code %>
          <%= order.address %>
          <%= order.name %></td>
      <td class="text-center"><%= order.total_payment %></td>
      <td class="text-center"><%= order.status %></td>
      <td><%= link_to "注文詳細", order_path(order.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
