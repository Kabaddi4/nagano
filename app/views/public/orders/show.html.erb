<div class="container">
  <div class="row">
    <div class="col">
      注文日：<%= @order.created_at %>
    </div>
    <div class="col">
      配送先：<%= @order.postal_code %><%= @order.address %>
    </div>
    <div class="col">
      支払方法：<%= @order.payment_method %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4>注文した商品</h4>
    </div>
  </div>
  <div class="row">
  <% @orders.each do |order| %>
    商品名：<%= order.item.name %>
    単価：<%= order.item.price %>
    個数：<%= order.amount %>
    小計<%= order.price * order.amount %>
    <br>
  <% end %>
  </div>

  <div class="row">
    <div class="col">
    <h4 class="my-3">請求情報</h4>
      <div class="px-2">
      商品合計(税込)：<%= @order.total_payment %>
      送料：<%= @order.postage %>
      支払金額：<%= @total %>
      </div>
    </div>
  </div>

</div>


